<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="text_font" format="enum">
        <enum name="Quicksand_Regular" value="0" />
        <enum name="Quicksand_Light" value="1" />
        <enum name="Quicksand_Medium" value="2" />
        <enum name="Quicksand_Bold" value="3" />
        <enum name="Camar" value="4" />
    </attr>

    <declare-styleable name="CustomTextView">
        <attr name="text_font" />
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="text_font" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="text_font" />
    </declare-styleable>

    <declare-styleable name="CustomCheckBox">
        <attr name="text_font" />
    </declare-styleable>

    <declare-styleable name="CustomRadioButton">
        <attr name="text_font" />
    </declare-styleable>

    <declare-styleable name="BarGraph">
        <attr name="barAxisColor" format="color"/>
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="barShowAxis" format="boolean"/>
        <attr name="barShowAxisLabel" format="boolean"/>
        <attr name="barShowText" format="boolean"/>
        <attr name="barShowPopup" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

</resources>